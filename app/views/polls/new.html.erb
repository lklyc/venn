<div class="container" id="container-forms">
  <%= form_for @poll, html: {multipart: true} do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :blurb %>
      <%= f.text_field :blurb, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :question %>
      <%= f.text_field :question, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :answer_hash, "comma seperated answers i.e. yes,no,maybe" %>
      <%= f.text_field :answer_hash, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>

    <div class="form-group">
      <%= f.submit(@poll.new_record? ?  'Create' : 'Update', class: 'btn btn-success') %>
    </div>
  <% end %>
</div>